{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDirs": ["src"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@test-helper/*": ["test-helper/*"]
    }
  },
  "include": ["src/**/*"]
}
